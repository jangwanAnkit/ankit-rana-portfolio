---
interface Props {
  title: string;
  description: string;
  image: string;
  category: string;
}

const { title, description, image, category } = Astro.props;
---

<div class="group relative overflow-hidden">
  <div class="aspect-w-3 aspect-h-4">
    <img 
      src={image} 
      alt={title}
      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
    />
  </div>
  <div class="absolute inset-0 bg-gradient-to-t from-arch-dark/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
    <div>
      <p class="text-arch-accent text-sm mb-2">{category}</p>
      <h3 class="font-playfair text-2xl text-white mb-2">{title}</h3>
      <p class="text-arch-light text-sm">{description}</p>
    </div>
  </div>
</div>