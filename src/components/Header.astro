---
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Projects', href: '/projects' },
  { name: 'Services', href: '/services' },
  { name: 'About', href: '/about' },
  { name: 'Contact', href: '/contact' },
];
---

<header class="fixed w-full bg-arch-light/90 backdrop-blur-sm z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-6">
      <div class="font-playfair text-2xl font-bold">
        <a href="/">ARCH<span class="text-arch-accent">STUDIO</span></a>
      </div>
      <nav class="hidden md:flex space-x-8">
        {navItems.map(item => (
          <a href={item.href} class="text-arch-dark hover:text-arch-accent transition-colors">
            {item.name}
          </a>
        ))}
      </nav>
    </div>
  </div>
</header>