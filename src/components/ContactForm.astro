<form class="space-y-6">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <label for="name" class="block text-sm font-medium mb-2">Name</label>
      <input
        type="text"
        id="name"
        name="name"
        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:border-arch-accent focus:ring-1 focus:ring-arch-accent"
        required
      />
    </div>
    <div>
      <label for="email" class="block text-sm font-medium mb-2">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:border-arch-accent focus:ring-1 focus:ring-arch-accent"
        required
      />
    </div>
  </div>
  <div>
    <label for="project" class="block text-sm font-medium mb-2">Project Type</label>
    <select
      id="project"
      name="project"
      class="w-full px-4 py-2 border border-gray-300 rounded-md focus:border-arch-accent focus:ring-1 focus:ring-arch-accent"
    >
      <option value="residential">Residential Design</option>
      <option value="interior">Interior Design</option>
      <option value="facade">Facade & Elevation</option>
    </select>
  </div>
  <div>
    <label for="message" class="block text-sm font-medium mb-2">Message</label>
    <textarea
      id="message"
      name="message"
      rows="4"
      class="w-full px-4 py-2 border border-gray-300 rounded-md focus:border-arch-accent focus:ring-1 focus:ring-arch-accent"
      required
    ></textarea>
  </div>
  <button
    type="submit"
    class="bg-arch-accent text-arch-light px-8 py-3 rounded-md hover:bg-arch-dark transition-colors"
  >
    Send Message
  </button>
</form>